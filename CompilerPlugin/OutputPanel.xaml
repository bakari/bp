<UserControl x:Class="CompilerPlugin.OutputPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:AvalonDock="clr-namespace:AvalonDock;assembly=AvalonDock">
	<ListView x:Name="errorListView">
		<ListView.Resources>
			<Style
				TargetType="{x:Type ListViewItem}">
				<EventSetter
					Event="MouseDoubleClick"
					Handler="ErrorListView_MouseDoubleClick" />
				<Setter
					Property="ToolTip"
					Value="{Binding Path=ToolTip}" />
			</Style>
		</ListView.Resources>
		<ListView.View>
			<GridView>
				<GridView.Columns>
					<GridViewColumn
						Header="!">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Image
									Width="16"
									Height="16"
									Source="Images/Error.png" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Header="Line"
						DisplayMemberBinding="{Binding Path=Line}" />
					<GridViewColumn
						Header="Description"
						DisplayMemberBinding="{Binding Path=Description}" />
					<GridViewColumn
						Header="File"
						DisplayMemberBinding="{Binding Path=File}" />
				</GridView.Columns>
			</GridView>
		</ListView.View>
	</ListView>
</UserControl>